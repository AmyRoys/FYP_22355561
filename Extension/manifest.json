{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "version": "1.0",
  "description": "A simple Chrome extension example.",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/hello_extensions.png"
  },
  "permissions": [
    "tabs"
  ]
  ,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}