{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "version": "1.0",
  "description": "A simple Chrome extension example.",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/hello_extensions.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "options_page": "hello.html"
}